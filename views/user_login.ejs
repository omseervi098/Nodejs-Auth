<link rel="stylesheet" href="<%=assetPath('/css/loginandsignup.css')%>" type="text/css">
<div class="outer-container">
    <div class="login-page bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 offset-lg-1">
                    <div class="bg-white shadow logincon my-4">
                        <div class="row">
                            <div class="col-md-5 ps-0 d-none d-md-block">
                                <div class="form-right h-100 bg-primary text-white text-center pt-5">
                                    <i class="bi bi-shield-lock-fill"></i>
                                    <h2 class="mt-4">Welcome back !!</h2>
                                    <a href="/users/auth/google">
                                        <button class="btn btn-light px-4 mt-4">
                                            <img src="<%=assetPath('images/google-icon.png')%>" class="me-2 img-fluid"
                                                width="30px" alt="google-icon">
                                            <span>Sign In/Signup</span>
                                        </button>
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-7 pe-0">
                                <div class="form-left h-100 py-3 px-5">
                                    <form action="/users/create-session" method="post" class="row g-4" id="loginform">
                                        <div class="col-12">
                                            <h1 class="text-center d-none showonsm">Login</h1>
                                            <label for="email">Email<span class="text-danger">*</span></label>
                                            <div class="input-group">
                                                <div class="input-group-text"><i class="bi bi-person-fill"></i>
                                                </div>
                                                <input type="email" class="form-control" placeholder="Enter Email"
                                                    name="email" id="email" required>
                                            </div>
                                        </div>

                                        <div class="col-12">
                                            <label for="password">Password<span class="text-danger">*</span></label>
                                            <div class="input-group">
                                                <div class="input-group-text"><i class="bi bi-lock-fill"></i></div>
                                                <input type="password" class="form-control" placeholder="Enter Password"
                                                    name="password" id="password" required>
                                            </div>
                                        </div>
                                        <div class="col-12 d-none">
                                            <input type="hidden" name="normallogin" value="true">
                                        </div>
                                        <div class="col-12">
                                            <div class="g-recaptcha recaptcha"
                                                data-sitekey="6LcPo7wjAAAAAOkGmTzzjSsfwFBRU_ODzDlw7fI-"></div>
                                        </div>
                                        <div class="col-sm-4">
                                            <a href="/users/forgot-password" class="float-end text-primary">Forgot
                                                Password?</a>
                                        </div>

                                        <div class="col-12 login">
                                            <button type="submit" class="btn btn-primary px-4 float-end mb-2">
                                                <i class="bi bi-box-arrow-in-right"></i>
                                                &nbsp;Login
                                            </button>
                                        </div>
                                    </form>
                                    <div class="col-12 text-center">
                                        <a href="/users/auth/google" class="p-0 d-none showonsm ">
                                            <hr>
                                            <button class="btn btn-dark px-4 glogin mt-2 ">
                                                <img src="<%=assetPath('images/google-icon.png')%>" class=" img-fluid"
                                                    width="30px" alt="google-icon">
                                                <span>Sign In/Signup</span>
                                            </button>
                                        </a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>