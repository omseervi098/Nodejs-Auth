<header id="mynavbar" class="topnav">
    <nav id="reload">
        <div class="active">
            <a href="/"><img src="<%=assetPath('images/logo_icon.png')%>" alt="logo">
                <div>
                    <p id="website-name">SocioKnct</p>
                </div>
            </a>
        </div>

        <ul>
            <% if(locals.user){ %>
                <li><input type="hidden" id="currentuser" value="<%=locals.user.username%>"></li>
                <li class="search-li"><input type="text" id="search-name" class="search" name="filtername"
                        placeholder="Enter Name"></li>

                <li class="friend-dropdown-li">
                    <div class="dropdown">
                        <button class="dropbtn" onclick="openDropdown()"><span>Friend Request</span><i
                                class="fa fa-user-plus"></i></button>
                        <div id="myDropdown" class="dropdown-content" style=" height: 350px; overflow-y: scroll;">
                            <%if(user.request && user.request.length!=0) {%>
                                <% for(i of newfriend){%>
                                    <div>

                                        <div>
                                            <h4>
                                                <%=i.username%>
                                            </h4>
                                        </div>
                                        <div>
                                            <div>
                                                <input type="hidden" name="senderId" id="senderId"
                                                    value="<%=i.userId%>">
                                                <input type="hidden" name="senderName" id="senderName"
                                                    value="<%=i.username%>">
                                                <button type="submit" id="accept_friend" class="btn"><i
                                                        class="fa-solid fa-check"></i></button>
                                            </div>
                                            <div>
                                                <input type="hidden" name="user_Id" id="user_Id" value="<%=i.userId%>">
                                                <button type="submit" id="cancel_friend" class="btn"><i
                                                        class="fa-solid fa-xmark"></i></button>
                                            </div>
                                        </div>

                                    </div>
                                    <%}%>
                                        <%}else{%>
                                            <div>
                                                <h4 style="text-align:center">No requests</h4>
                                            </div>
                                            <%}%>
                        </div>
                    </div>
                </li>

                <li class="profile-li"><a href="/users/profile/<%= user._id %>"><button><span>
                                <%= user.name.split(' ')[0] %></span><i style="display: none;" class="fa-solid fa-user"></i></button></a></li>
            <li class="signout-li">
                <a href="/users/signout"><button><span>Sign-Out</span><i style="display:none;"class="fa-solid fa-arrow-right-from-bracket"></i></button></a>
            
            </li>
        <% }else{%>
            <li>
                <a href="/users/login"><button>Sign-In</button></a>
            </li>
            <li>
                <a href="/users/signup"><button>Sign-Up</button></a>
            </li>
        <%}%>
    </ul>
    <%if(locals.user){%>
    <a href="javascript:void(0);" class="icon" onclick="opennav()">
        <i class="fa fa-bars"></i>
      </a>
    <%}%>
    </nav>
</header>